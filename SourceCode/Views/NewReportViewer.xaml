<UserControl x:Class="KidGameBoard.Views.NewReportViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KidGameBoard.Views"
             xmlns:vm="clr-namespace:KidGameBoard.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <UserControl.DataContext>
        <vm:NewReportViewerViewModel/>
    </UserControl.DataContext>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Label Content="開始日期：" VerticalAlignment="Center"/>
                <DatePicker SelectedDate="{Binding StartDate}" VerticalAlignment="Center"/>
                <Label Content="結束日期：" VerticalAlignment="Center" Margin="20,0,0,0"/>
                <DatePicker SelectedDate="{Binding EndDate}" VerticalAlignment="Center"/>
                <Button Content="查詢" Command="{Binding QueryCommand}" Margin="20,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding PersonScores}" Margin="0,10,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="姓名" DisplayMemberBinding="{Binding Name}" Width="150"/>
                    <GridViewColumn Header="總分數" DisplayMemberBinding="{Binding TotalScore}" Width="100"/>
                    <GridViewColumn Header="已兌換分數" DisplayMemberBinding="{Binding RedeemedScore}" Width="100"/>
                    <GridViewColumn Header="可用分數" DisplayMemberBinding="{Binding AvailableScore}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
