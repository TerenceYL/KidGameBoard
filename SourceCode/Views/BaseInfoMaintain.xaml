<UserControl
    x:Class="KidGameBoard.Views.BaseInfoMaintain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:KidGameBoard.ViewModels"
    Background="White">
    <UserControl.DataContext>
        <vm:BaseInfoMaintainViewModel />
    </UserControl.DataContext>
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="0.1*" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>
        <!--  人員維護  -->
        <Grid Grid.Column="0">
            <GroupBox Margin="0,0,10,0" Header="人員清單">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="1*" MinHeight="280" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <ListBox
                            DisplayMemberPath="Name"
                            ItemsSource="{Binding People}"
                            SelectedItem="{Binding SelectedPerson, Mode=TwoWay}" />
                    </Grid>
                    <Grid Grid.Row="1">
                        <StackPanel Margin="0,10,0,0">
                            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                <Label Width="60" Content="姓名：" />
                                <TextBox Width="200" Text="{Binding EditPerson.Name, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                <Label Width="60" Content="備註：" />
                                <TextBox Width="200" Text="{Binding EditPerson.Description, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Width="60"
                                    Command="{Binding AddPersonCommand}"
                                    Content="新增" />
                                <Button
                                    Width="60"
                                    Command="{Binding SavePersonCommand}"
                                    Content="儲存" />
                                <Button
                                    Width="60"
                                    Command="{Binding DeletePersonCommand}"
                                    Content="刪除" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                </Grid>
            </GroupBox>
        </Grid>
        <!--  分隔線  -->
        <Grid Grid.Column="1">
            <Separator Margin="5" VerticalAlignment="Stretch" />
        </Grid>
        <!--  工作項目維護  -->
        <Grid Grid.Column="2">
            <GroupBox Margin="10,0,0,0" Header="工作項目清單">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="1*" MinHeight="280" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ListBox
                            Grid.Column="0"
                            DisplayMemberPath="Displayname"
                            ItemsSource="{Binding WorkItems}"
                            SelectedItem="{Binding SelectedWorkItem, Mode=TwoWay}" />
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <Button
                                Width="30"
                                Height="30"
                                Margin="5"
                                Command="{Binding MoveWorkItemUpCommand}"
                                Content="↑" />
                            <Button
                                Width="30"
                                Height="30"
                                Margin="5"
                                Command="{Binding MoveWorkItemDownCommand}"
                                Content="↓" />
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="1">
                        <StackPanel Margin="0,10,0,0">
                            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                <Label Width="60" Content="名稱：" />
                                <TextBox Width="400" Text="{Binding EditWorkItem.Name, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                <Label Width="60" Content="分數：" />
                                <TextBox Width="80" Text="{Binding EditWorkItem.Score, UpdateSourceTrigger=PropertyChanged}" />
                                <Label Width="60" Content="排序：" />
                                <TextBox Width="80" Text="{Binding EditWorkItem.Seq, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                <Label Width="60" Content="啟用：" />
                                <CheckBox IsChecked="{Binding EditWorkItem.IsEnabled}" />
                            </StackPanel>
                            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                <Label Width="60" Content="備註：" />
                                <TextBox Width="400" Text="{Binding EditWorkItem.Description, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Width="60"
                                    Command="{Binding AddWorkItemCommand}"
                                    Content="新增" />
                                <Button
                                    Width="60"
                                    Command="{Binding SaveWorkItemCommand}"
                                    Content="儲存" />
                                <Button
                                    Width="60"
                                    Command="{Binding DeleteWorkItemCommand}"
                                    Content="刪除" />
                                <Button
                                    Width="60"
                                    Margin="30,5,5,5"
                                    Command="{Binding LoadWorkItemsCommand}"
                                    Content="刷新" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                </Grid>
            </GroupBox>
        </Grid>



    </Grid>
</UserControl>
