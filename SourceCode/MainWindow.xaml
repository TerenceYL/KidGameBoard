<Window
    x:Class="KidGameBoard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KidGameBoard"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:KidGameBoard.Views"
    Title="小孩賺分遊戲程式"
    Width="1200"
    Height="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MaxWidth="200" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Label Content="功能選單" />
            <Button Click="DailyRecord_Click" Content="每日紀錄登記" />
            <Button Click="PointRedemption_Click" Content="積分兌換" />
            <Button Click="Report_Click" Content="報表" />
            <Button Click="BaseInfo_Click" Content="基本資料維護" />
        </StackPanel>
        <Grid Grid.Column="1">
            <ContentControl x:Name="MainContent" Grid.Column="1" />
        </Grid>
    </Grid>
</Window>
